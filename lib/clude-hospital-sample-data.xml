<select  style="text-overflow: unset !important; white-space: normal !important; overflow: visible !important; width: auto !important;"

 <option style="text-overflow: unset !important; white-space: normal !important; overflow: visible !important; width: auto !important;">


  <div class="custom-dropdown-select" style="width: auto !important; min-width: 100% !important;">
    <div class="custom-dropdown-select__inner" style="width: auto !important; overflow: visible !important;">
        <!-- rest of the code -->
    </div>
</div>



 $('select').on('shown.bs.select', function() {
    $('.dropdown-menu').css({
        'max-width': 'none !important',
        'width': 'auto !important'
    });
});


  <style>
  /* Target the dropdown button text */
  .bootstrap-select .filter-option-inner-inner,
  .dropdown-toggle .filter-option-inner-inner {
    text-overflow: clip !important;
    overflow: visible !important;
    white-space: normal !important;
    word-wrap: break-word !important;
    width: auto !important;
  }
  
  /* Target the dropdown menu items */
  .bootstrap-select .dropdown-menu li a,
  .dropdown-menu > li > a {
    white-space: normal !important;
    word-wrap: break-word !important;
    text-overflow: clip !important;
    overflow: visible !important;
  }
  
  /* Ensure dropdown width is sufficient */
  .bootstrap-select .dropdown-menu {
    width: auto !important;
    min-width: 100% !important;
    max-width: none !important;
  }
  
  /* For custom implementations */
  .custom-dropdown-select,
  .custom-dropdown-select__inner {
    overflow: visible !important;
  }
  
  /* Override any other potential truncation */
  * {
    text-overflow: inherit !important;
  }
</style>

  
